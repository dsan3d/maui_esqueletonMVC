<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:maui_esqueletonMVC.ViewModels"
             x:Class="maui_esqueletonMVC.Views.VentanaUno"
             Title="VentanaUno">
    <ContentPage.BindingContext>
        <vm:VentanaUnoVM/>
    </ContentPage.BindingContext>
        
        <VerticalStackLayout>
        <Label 
            Text="{Binding MyLabel}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button x:Name="btnPulsar" Text="Haz click sobre mi" Command="{Binding BtnPulsar}"/>
    </VerticalStackLayout>
</ContentPage>